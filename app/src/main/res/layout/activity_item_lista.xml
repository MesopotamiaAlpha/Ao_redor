<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ItemLista">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="900dp">

            <ImageView
                android:id="@+id/img"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:contentDescription="TODO" />

            <RelativeLayout
                android:layout_width="400dp"
                android:layout_height="496dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true">

                <TextView
                    android:id="@+id/lblMonta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Monta:"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/lblCampo_monta"
                    android:layout_width="142dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/lblMonta"
                    android:layout_toRightOf="@+id/lblMonta" />

                <TextView
                    android:id="@+id/lblLance_inicial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lblMonta"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:text="Lance Inicial:"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/lblLance_final"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lblMonta"
                    android:layout_toEndOf="@+id/lblCampo_monta"
                    android:layout_toRightOf="@+id/lblCampo_monta"
                    android:text="Lance Final:"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/lblAno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="169dp"
                    android:layout_marginRight="169dp"
                    android:text="Ano:"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/lblDescricao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lblLance_inicial"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:text="Descrição:"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/lblCampo_descricao"
                    android:layout_width="match_parent"
                    android:layout_height="900dp"
                    android:layout_below="@+id/lblDescricao"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/lblCampo_ano"
                    android:layout_width="165dp"
                    android:layout_height="wrap_content"

                    android:layout_marginStart="-169dp"
                    android:layout_toEndOf="@+id/lblAno"
                    android:layout_marginLeft="-169dp"
                    android:layout_toRightOf="@+id/lblAno" />

                <TextView
                    android:id="@+id/lblCampo_lancefinal"
                    android:layout_width="121dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lblMonta"
                    android:layout_toEndOf="@+id/lblLance_final"
                    android:layout_toRightOf="@+id/lblLance_final" />

                <TextView
                    android:id="@+id/lblCampo_lanceinicial"
                    android:layout_width="101dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lblMonta"
                    android:layout_toEndOf="@+id/lblLance_inicial" />
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>


</RelativeLayout>